<Window x:Class="lab4z2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4z2"
        mc:Ignorable="d"
        Title="Main Window" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnAdd" Content="Add Student" HorizontalAlignment="Left" Height="44" Margin="10,64,0,0" VerticalAlignment="Top" Width="135" Click="btnAdd_Click"/>
        <Button x:Name="btnRemove" Content="Remove Student" HorizontalAlignment="Left" Height="44" Margin="150,64,0,0" VerticalAlignment="Top" Width="135" Click="btnRemove_Click"/>
        <Button x:Name="btnEdit" Content="Edit Student" HorizontalAlignment="Left" Height="44" Margin="290,64,0,0" VerticalAlignment="Top" Width="135" Click="btnEdit_Click" />
        <Button x:Name="btnAddGrades" Content="Add school grades"  HorizontalAlignment="Left" Height="44" Margin="430,64,0,0" VerticalAlignment="Top" Width="135" Click="btnAddGrades_Click"/>
        <Button x:Name="btnShowGrades" Content="School grades"  HorizontalAlignment="Left" Height="44" Margin="570,64,0,0" VerticalAlignment="Top" Width="135" Click="btnShowGrades_Click"/>
        <DataGrid Name="dgStudents" Margin="10,141,10,10"/>

    </Grid>
</Window>
