<Window x:Class="lab4z2.AddGradeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab4z2"
        mc:Ignorable="d"
        Title="Add grade" Height="200" Width="300">
    <Grid>
        <Label Content="Kurs" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Ocena" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbOcena" HorizontalAlignment="Left" Margin="59,45,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem IsSelected="True" Content="2"/>
            <ComboBoxItem Content="3"/>
            <ComboBoxItem Content="4"/>
            <ComboBoxItem Content="5"/>
        </ComboBox>
        <TextBox x:Name="tbKurs" HorizontalAlignment="Left" Margin="59,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnOk" Content="Ok" HorizontalAlignment="Left" Margin="207,122,0,0" VerticalAlignment="Top" Height="35" Width="35" Click="btnOk_Click"/>
        

    </Grid>
</Window>
